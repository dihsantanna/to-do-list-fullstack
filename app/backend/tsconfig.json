{
  "compilerOptions": {
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "ES2020",
    "module": "node16",
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "lib": [
      "ES2020"
    ],
    "outDir": "dist",
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@api/*": [
        "./src/api/*"
      ],
      "@app/*": [
        "./src/app/*"
      ],
      "@db/*": [
        "./src/db/*"
      ],
      "@src/*": [
        "./src/*"
      ],
    },
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
